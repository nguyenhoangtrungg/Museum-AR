<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:name=".MuseumArApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MuseumAR"
        tools:targetApi="31">
        <activity
            android:name=".presentation.intro.IntroductionActivity"
            android:theme="@style/Theme.MuseumAR.Fullscreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <activity
            android:name=".presentation.camera.view3d.View3dActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.RealMainActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.intro.LoginActivity"
            android:exported="false" />

    </application>

</manifest>
