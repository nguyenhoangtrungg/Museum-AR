<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCollectionStoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_30"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/recommended"
            android:textColor="@color/main_black"
            android:textSize="@dimen/dimen_text_size_22" />

        <com.tiger.ar.museum.presentation.widget.CollectionView
            android:id="@+id/cvCollectionsStories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/dimen_24" />

    </LinearLayout>

</layout>
